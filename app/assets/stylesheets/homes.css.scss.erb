/* change the path of icons for bootstrap */
@font-face {
  font-family: 'Glyphicons Halflings';
  src: url(<%= asset_path 'glyphicons-halflings-regular.eot' %>);
  src: url(<%= asset_path 'glyphicons-halflings-regular.eot?#iefix' %>) format('embedded-opentype'), 
       url(<%= asset_path 'glyphicons-halflings-regular.woff' %>) format('woff'), 
       url(<%= asset_path 'glyphicons-halflings-regular.ttf' %>) format('truetype'), 
       url(<%= asset_path 'glyphicons-halflings-regular.svg#glyphicons_halflingsregular' %>) format('svg');
}


html {
  position: relative;
  min-height: 100%;
}
body {
  height: 100%;
  font-family: 'open-sans';
}


.navbar-nadvence{
  color: grey;
  background-color: white;
  border-bottom: 1px solid #e7e7e7 !important;
  
}
.navbar-brand{
  color: #28c3ab !important;
  font-size: inherit;
  
}

.navbar-nav{
  li{
    font-size: 16px;
  }
}

h1.navbar-h1{
  margin: 0px;
  font-size: 30px;
  padding-bottom: 10px;
}

textarea#main_text {
  font-size: 16px;
  border: 2px solid #e7e7e7;
  border-radius: 5px;
  padding: 5px;
}

.nadvence-header{
  color: #28c3ab !important;
}

/* Smartphones (portrait) ----------- */
@media only screen 
and (max-width : 992px) {
.side-column{
  background-color: #f7f7f7;
  height: 100%;
  display: block;
  min-height: 100%;
  overflow-y: hidden;
  position: relative;
  padding-bottom: 50px;
}
}

@media only screen 
and (min-width : 992px) {
.side-column{
  background-color: #f7f7f7;
  height: 100%;
  display: block;
  min-height: 100%;
  overflow-y: scroll;
  position: fixed;
  top: 50px;
  bottom: 0;
  right: 0;
  padding-bottom: 50px;
}
}





#main_text{
  width: 100%;
}

.btn {
  margin-top: 5px;
}

.main-container{
  margin-top: 50px;
  height: 100%;
}


// CSS checcbox

input[type=checkbox].css-checkbox {
  display: none;
}

input[type=checkbox].css-checkbox + label.css-label {
  padding-left: 25px;
  height: 20px;
  display: inline-block;
  line-height: 20px;
  background-repeat: no-repeat;
  background-position: 0 0;
  //font-size: 20px;
  vertical-align: middle;
  cursor: pointer;
}

input[type=checkbox].css-checkbox:checked + label.css-label {
  background-position: 0 -20px;
}


label.css-label {
  margin: 2px;
  background-image: url(<%= asset_path 'checkbox_green_nadvence.png' %>);
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  vertical-align: baseline !important;
}


